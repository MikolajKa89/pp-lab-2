import java.util.Random;

public class TablicaOcenLosowe {

    private static final int LICZBA_OCEN = 10;
    private static final int MAX_OCENA = 6;

    public static void main(String[] args) {
        Random random = new Random();

        // Losowe generowanie ocen
        double[] oceny = new double[LICZBA_OCEN];
        for (int i = 0; i < LICZBA_OCEN; i++) {
            oceny[i] = random.nextDouble() * MAX_OCENA;
        }

        // Wyświetlanie ocen
        System.out.println("Oceny:");
        for (double ocena : oceny) {
            System.out.println(ocena);
        }

        // Obliczanie i wyświetlanie średniej
        double średnia = 0;
        for (double ocena : oceny) {
            średnia += ocena;
        }

        średnia /= LICZBA_OCEN;
        System.out.println("Średnia: " + średnia);
    }
}
